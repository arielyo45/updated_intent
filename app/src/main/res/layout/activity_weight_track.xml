<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight Tracking &amp; Fitness Analysis"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Your Weight"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new weight (kg)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonUpdateWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Weight"
        android:layout_marginBottom="24dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is your current goal?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose Weight" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintain Weight" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gain Weight/Bulk" />

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get AI-Powered Analysis"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonShowBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Basic BMI Analysis"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonPersonalizedAdvice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Personalized Fitness Advice"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

</LinearLayout>